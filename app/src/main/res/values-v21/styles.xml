<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AndroidColorPrimaryDark">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
    </style>

    <style name="AppTheme.AndroidStatusBarColor" parent="AppTheme.AndroidColorPrimaryDark">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkRed</item>
    </style>

    <style name="AppTheme.StatusBarCompatDrawerLayout">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>